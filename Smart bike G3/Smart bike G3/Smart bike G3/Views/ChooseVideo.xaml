<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Smart_bike_G3.Views.ChooseVideo">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Wat wil je luisteren?" FontSize="48" FontAttributes="Bold" HorizontalTextAlignment="Center"  TextColor="#302e33"/>
            <Grid Margin="48" RowSpacing="64">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="144"/>
                    <RowDefinition Height="56" />
                </Grid.RowDefinitions>
                
                <Label Grid.Column="0" Grid.Row="0" Text="Muziek" FontSize="40" HorizontalTextAlignment="Center" TextColor="#615C66"/>
                <Image Grid.Column="0" Grid.Row="1" x:Name="imgMuziek"/>
                <Button Grid.Column="0" Grid.Row="2" x:Name="btnmuziek" Text="Muziek" TextColor="White" BackgroundColor="#5589ee" CornerRadius="10"/>


                <Label Grid.Column="1" Grid.Row="0" Text="Games" FontSize="40" HorizontalTextAlignment="Center" TextColor="#615C66"/>
                <Image Grid.Column="1" Grid.Row="1" x:Name="imgLuisterboek"/>
                <Button Grid.Column="1" Grid.Row="2" x:Name="btnLuisterboek" Text="Luisterboek" TextColor="White" BackgroundColor="#5589ee" CornerRadius="10"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>