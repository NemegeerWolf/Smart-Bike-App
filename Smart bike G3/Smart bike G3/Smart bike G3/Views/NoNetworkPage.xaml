<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Smart_bike_G3.Views.NoNetworkPage"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="White">
    <ContentPage.Content>
        <StackLayout>
            <Image x:Name="imgNoInternet"/>
            <Label Text="Oeps, geen internet!" TextColor="Black" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" FontFamily="Rubik-SemiBold" FontSize="48"/>
            <Button x:Name="btnTryAgain" Text="Probeer opnieuw" Clicked="btnTryAgain_Clicked" WidthRequest="300" HeightRequest="56" BackgroundColor="#5589EE" TextColor="White" HorizontalOptions="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>