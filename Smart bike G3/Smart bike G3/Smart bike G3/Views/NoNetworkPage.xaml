<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Smart_bike_G3.Views.NoNetworkPage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <Grid Margin="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="10" />
                    <RowDefinition />
                </Grid.RowDefinitions>
            </Grid>
            <Image x:Name="imgNoInternet" Grid.Column="1" Grid.Row="1"/>
            <Label Grid.Column="0" Grid.Row="1" Text="Oeps, geen internet verbinding!" TextColor="Black" FontFamily="Rubik-SemiBold" FontSize="48"/>
            <Label Grid.Column="0" Grid.Row="1" Text="Je bent niet geconnecteerd met het internet. Controleer dat de WiFi aan ligt, vliegtuigmodus uitgeschakeld is en probeer het opnieuw. " TextColor="Black" FontFamily="Rubik-Regular" FontSize="28"/>
            <Button Grid.Column="0" Grid.Row="1" x:Name="btnTryAgain" Text="Probeer opnieuw" Clicked="btnTryAgain_Clicked" WidthRequest="300" HeightRequest="56" BackgroundColor="#5589EE" TextColor="White" CornerRadius="10" FontFamily="Rubik-SemiBold"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>